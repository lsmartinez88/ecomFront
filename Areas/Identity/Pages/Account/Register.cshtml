@page
@model RegisterModel
@{
    Layout = "./Manage/_Layout.cshtml";
    ViewData["Title"] = "Registrar Cuenta";
}
<div class="content d-flex justify-content-center align-items-center">
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="flex-fill">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="card mb-0">
                    <div class="card-body">
                        <div class="text-center mb-3">
                            <i class="icon-plus3 icon-2x text-success border-success border-3 rounded-pill p-3 mb-3 mt-1"></i>
                            <h5 class="mb-0">Crear cuenta</h5>
                            <span class="d-block text-muted">Todos los campos son requeridos</span>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group form-group-feedback form-group-feedback-right">
                            <input asp-for="Input.UserName" class="form-control" placeholder="Ingresar Usuario">
                            <div class="form-control-feedback">
                                <i class="icon-user-plus text-muted"></i>
                            </div>
                            <span asp-validation-for="Input.UserName" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group form-group-feedback form-group-feedback-right">
                                    <input asp-for="Input.Nombre" class="form-control" placeholder="Nombre">
                                    <div class="form-control-feedback">
                                        <i class="icon-user-check text-muted"></i>
                                    </div>
                                    <span asp-validation-for="Input.Nombre" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="form-group form-group-feedback form-group-feedback-right">
                                    <input asp-for="Input.Apellido" class="form-control" placeholder="Apellido">
                                    <div class="form-control-feedback">
                                        <i class="icon-user-check text-muted"></i>
                                    </div>
                                    <span asp-validation-for="Input.Apellido" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group form-group-feedback form-group-feedback-right">
                                    <input asp-for="Input.Password" class="form-control" placeholder="Password">
                                    <div class="form-control-feedback">
                                        <i class="icon-user-lock text-muted"></i>
                                    </div>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="form-group form-group-feedback form-group-feedback-right">
                                    <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Repetir password">
                                    <div class="form-control-feedback">
                                        <i class="icon-mention text-muted"></i>
                                    </div>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group form-group-feedback form-group-feedback-right">
                                    <input asp-for="Input.Phone" class="form-control" placeholder="Telefono">
                                    <div class="form-control-feedback">
                                        <i class="icon-phone text-muted"></i>
                                    </div>
                                    <span asp-validation-for="Input.Phone" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="form-group form-group-feedback form-group-feedback-right">
                                    <input asp-for="Input.Email" class="form-control" placeholder="Email">
                                    <div class="form-control-feedback">
                                        <i class="icon-home text-muted"></i>
                                    </div>
                                </div>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer bg-transparent text-right">
                        <button type="submit" class="btn btn-teal btn-labeled btn-labeled-right"><b><i class="icon-plus3"></i></b> Crear cuenta</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }


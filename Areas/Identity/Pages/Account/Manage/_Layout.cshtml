<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - ecomFront</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,300,100,500,700,900" rel="stylesheet" type="text/css">
    <link href="~/global_assets/css/icons/iconmoon/styles.min.css" rel="stylesheet" type="text/css">
    <link href="~/assets/css/all.min.css" rel="stylesheet" type="text/css">
    <script src="~/global_assets/js/main/jquery.min.js"></script>
    <script src="~/global_assets/js/main/bootstrap.bundle.min.js"></script>

    <script src="~/assets/js/app.js"></script>

</head>
<body>

    <!-- Main navbar -->
    <div class="navbar navbar-expand-lg navbar-dark bg-indigo navbar-static">
        <div class="navbar-brand text-center text-lg-left p-2">
            <div class="d-inline-block">
                <embed src="../../../../global_assets/images/texto_blanco.svg" class="d-none d-sm-block mt-2" style="height:20px;" />
            </div>
        </div>

            <div class="d-flex justify-content-end align-items-center ml-auto">
                <ul class="navbar-nav flex-row">
                    <li class="nav-item">
                        <a asp-page="./" class="navbar-nav-link">
                            <i class="icon-magazine"></i>
                            <span class="d-none d-lg-inline-block ml-2">Blog</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="navbar-nav-link">
                            <i class="icon-user-plus"></i>
                            <span class="d-none d-lg-inline-block ml-2">Registrarse</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="navbar-nav-link">
                            <i class="icon-user-lock"></i>
                            <span class="d-none d-lg-inline-block ml-2">Loguearse</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    <!-- /main navbar -->
    <!-- Page content -->
    <div class="page-content">
        <!-- Main content -->
        <div class="content-wrapper">
            <!-- Inner content -->
            <div class="content-inner">
                @RenderBody()
                <!-- Footer -->
                <div class="navbar navbar-expand-lg navbar-light">
                    <div class="text-center d-lg-none w-100">
                        <button type="button" class="navbar-toggler dropdown-toggle" data-toggle="collapse" data-target="#navbar-footer">
                            <i class="icon-unfold mr-2"></i>
                            Footer
                        </button>
                    </div>
                    <div class="navbar-collapse collapse" id="navbar-footer">
                        <span class="navbar-text">
                            &copy; 2021 | <a href="https://www.unlam.edu.ar/" target="_blank">Universidad Nacional De La Matanza</a> | Grupo 102
                        </span>
                        <ul class="navbar-nav ml-lg-auto">
                            <!--<li class="nav-item"><a href="https://drive.google.com/drive/folders/1tup7lM35X8cVAXCYZSzn6VrG8sRVz0jf?usp=sharing" class="navbar-nav-link" target="_blank"><i class="icon-file-text2 mr-2"></i> Documentacion</a></li>-->
                            <li class="nav-item"><a href="https://www.instagram.com/ecomunlam/" class="navbar-nav-link font-weight-semibold"><span class="text-pink"><i class="icon-phone mr-2"></i> Contacto</span></a></li>
                        </ul>
                    </div>
                </div>
                <!-- /footer -->
            </div>
            <!-- /inner content -->
        </div>
        <!-- /main content -->
    </div>
    <!-- /page content -->

    @RenderSection("Scripts", required: false)
</body>
</html>


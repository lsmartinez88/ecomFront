@using ecomFront.Models.UserViewModels


@{
    ViewData["Title"] = "Perfil";
    Layout = "_Layout";
}
@model ApplicationUser
<!-- Page header -->

<div class="page-header page-header-light">
    <div class="breadcrumb-line breadcrumb-line-light header-elements-lg-inline">
        <div class="d-flex">
            <div class="breadcrumb">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="icon-home2 mr-2"></i> Home</a>
            </div>

            <a href="#" class="header-elements-toggle text-body d-lg-none"><i class="icon-more"></i></a>
        </div>

        <div class="header-elements d-none">
            <div class="breadcrumb justify-content-center">
                <a href="#" data-toggle="modal" data-target="#modal_info_dashboard">
                    <i class="mi-info-outline mr-3 mi-2x"></i>
                </a>
            </div>
        </div>
    </div>
</div>
<!-- /page header -->

<div class="content">
    <div class="col-lg-12">

        <!-- Basic layout-->
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Perfil Usuario</h5>
            </div>

            <div class="card-body">
                <form action="#" method="POST">
                    @Html.HiddenFor(a => a.Id)
                    <div class="form-group row">
                        <label class="col-lg-4 col-form-label">Nombre:</label>
                        <div class="col-lg-8">
                            @Html.TextBoxFor(a => a.Nombre, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-lg-4 col-form-label">Apellido:</label>
                        <div class="col-lg-8">
                            @Html.TextBoxFor(a => a.Apellido, new { @class = "form-control" })
                        </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label">Email:</label>
                            <div class="col-lg-8">
                                @Html.TextBoxFor(a => a.Email, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label">Empresa:</label>
                            <div class="col-lg-8">
                                @Html.TextBoxFor(a => a.Empresa, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-4 col-form-label">Telefono:</label>
                            <div class="col-lg-8">
                                @Html.TextBoxFor(a => a.PhoneNumber, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="text-right">
                            <button type="submit" id="boton" class="btn btn-primary">Confirmar <i class="icon-paperplane ml-2"></i></button>
                        </div>
</form>
            </div>
        </div>
        <!-- /basic layout -->

    </div>
</div>

<script type="text/javascript">
    
</script>
